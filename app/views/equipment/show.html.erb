      </div>
    </div>
    <div class="to">
      <div class="to-contents">
        <div class="topbar">
          <div class="name-large">Book Now</div>
          <div class="x-touch" onclick="document.querySelector('.email').classList.remove('expand');event.stopPropagation();">
            <div class="x">
              <div class="line1"></div>
              <div class="line2"></div>
            </div>
          </div>
        </div>
        <div class="bottom">
          <div class="row">
            <%= simple_form_for([@equipment, @booking]) do |f| %>
            <%= f.input :start_date %>
            <%= f.input :end_date %> 
            <%= f.submit :submit %> 
          <% end %>
          </div>
          <div class="row">
            <svg class="medium" viewBox="0 0 24 24">
