

<div class="card-container">
<% @equipment.each do |eq| %>

<div class="card">

            <div class="equipment">
                <div class="image">
                   <img alt="kayak" src="https://images.unsplash.com/photo-1544443244-6d30db813769?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3450&q=80">
                </div>
          
              <div class="info">
                <h2 class="title"><%= eq.title %></h2>
              <div class="book_now">
                    <button class="button"><%= link_to 'Show me', equipment_path(eq) %></button>
             </div>
      </div>
  </div>
</div>
<% end %>
</div>

